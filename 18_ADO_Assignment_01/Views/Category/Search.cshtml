@model _18_ADO_Assignment_01.Models.Category

@using (Html.BeginForm("Search", "Category", FormMethod.Post))
{
    <div class="form-inline">
        @Html.LabelFor(model => model.division, htmlAttributes: new { @class = "control-label col-2" })
        <div class="p-2">
            @Html.TextBoxFor(model => model.division, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-inline">
        @Html.LabelFor(model => model.region, htmlAttributes: new { @class = "control-label col-2" })
        <div class="p-2">
            @Html.TextBoxFor(model => model.region, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-inline">
        @Html.LabelFor(model => model.supplier_id, htmlAttributes: new { @class = "control-label col-2" })
        <div class="p-2">
            @Html.TextBoxFor(model => model.supplier_id, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-inline">
        @Html.LabelFor(model => model.supplier_name, htmlAttributes: new { @class = "control-label col-2" })
        <div class="p-2">
            @Html.TextBoxFor(model => model.supplier_name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-inline">
        @Html.LabelFor(model => model.category_code, htmlAttributes: new { @class = "control-label col-2" })
        <div class="p-2">
            @Html.TextBoxFor(model => model.category_code, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-inline">
        <div class="p-2 offset-2">
            <button type="submit">Search</button>
        </div>
    </div>

    if (Model != null && Model.CategoryResults != null && Model.CategoryResults.Count > 0)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.category_code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.category_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.division)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.region)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.supplier_id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.supplier_name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.CategoryResults)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.category_code, "Edit", new { code = item.category_code })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.category_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.division)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.region)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.supplier_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.supplier_name)
                    </td>
                </tr>
            }
        </table>
    }
}
